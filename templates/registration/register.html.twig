{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container mt-5 vertical">
        <div class="row justify-content-center ">
            <div class="card col-md-4 ">
                <h1>Register</h1>

                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.fullname) }}

                    {{ form_errors(registrationForm.email) }}
                    {{ form_label(registrationForm.email) }}
                    {{ form_widget(registrationForm.email) }}

                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}

                    <div class="mt-3">
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>

                    <button type="submit" class="btn btn-primary mt-3 mb-3">Register</button>
                {{ form_end(registrationForm) }}
            
            </div>
        </div>
    </div>

    
{% endblock %}

{% block javascripts %}

    <script>
    const elements = document.getElementById('tricks')    
    const myElement = Array.from(elements.getElementsByTagName("UL"));
    myElement.forEach((element) => {
        element.className = 'list-group mt-3 text-danger ';
        element.firstChild.className = 'list-group-item text-danger border-danger fs';
    }); 
</script>


{% endblock %}