{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
         {% for message in app.flashes('fail') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <h3 class="mb-4">Changement de mot de passe</h3>
        <p>Pour changer votre mot de passe, indiquez votre email. Un lien sera automatiquement généré et envoyé dans votre boite mail</p>
        {{ form_start(form)}}
        {{ form_row(form.email) }}
        <button class="btn btn-primary mt-2">Envoyer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}